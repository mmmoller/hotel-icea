extends layout

block content
	div.container
		div.row
			center
				div.section-wall
					h1.section-title Inserir folha de coleta e entrega
	div.container#folha-ce-table-wrapper
		center
			form(action='/home/lavanderia/folha', method='POST')
				table#folha-ce-table.table-striped.table-bordered
					thead
						tr
							th(style='width:20%') Item
							th(style='width:50%') Descrição
							th(style='width:15%') Quantidade de coleta
							th(style='width:15%') Quantidade de entrega
					tbody
						-for(var i = 0; i < 13; i++){
							tr
								td(style='width:20%') #{i+1}
								td(style='width:50%') #{descricoes[i]}
								td(style='width:15%') 
									input(type='number', name='folha_coleta_item_#{i}', placeholder='0', style='width:50%')
								td(style='width:15%')
									input(type='number', name='folha_entrega_item_#{i}', placeholder='0', style='width:50%')

						-}	
						tr
							td(colspan='6', style='text-align:center')
								p(style='margin-top:20px') Data de coleta
								input(type='date', name='dataColeta' class='form-control', placeholder='Coleta',required, style='margin-top:10px;width:18%;margin:0 auto')
								p(style='margin-top:20px') Data de entrega
								input(type='date', name='dataEntrega' class='form-control', placeholder='Entrega',required, style='margin-top:10px;width:18%;margin:0 auto')
								p(style='margin-top:20px') Nome do fiscal
								input(type='text', name='nomeFiscal' class='form-control', placeholder='Nome',required, style='margin-top:10px;width:30%;margin:0 auto')
								button(class='btn btn-primary', type='submit',style='text-align:center;margin-top:30px') Inserir folha no banco de dados
								span.clearfix
		

extends layout

block content
	-if ( message != undefined && message.length){
		div.container
			div.row
				center
					div.alert.alert-success #{message}
	-}
	div.container
		div.row
			center
				div.section-wall
					h1.section-title #{titulo}
	div.container#folha-ce-table-wrapper
		center
			table#folha-ce-table.table-striped.table-bordered
				thead
					tr
						th(style='width:50%') Nome
						th(style='width:10%') Leito
						th(style='width:10%') Data de Entrada
						th(style='width:10%') Data de Saida
						th(style='width:15%') #{botao}
				tbody
					- for (var i = 0; i < cadastros.length; ++i){
						tr
							td 
								a(href='/home/registro/cadastro?_id=#{cadastros[i]._id}', target='blank') #{cadastros[i].name}
							td #{leitos[i]}
							td #{cadastros[i].dateIn}
							td #{cadastros[i].dateOut}
							td
								form(class="form-signin", action='/home/recepcao/' + '#{endereco}', method='POST')
									input(type='hidden', name='cod_leito', value=leitos[i])
									input(type='hidden', name='dateOut', value=cadastros[i].dateOut)
									input(type='hidden', name='dateIn', value=cadastros[i].dateIn)
									if (limpeza)
										if (limpeza[i] == 'sujo')
											button(class='btn btn-lg btn-warning btn-block', type='submit') #{botao}
										else
											button(class='btn btn-lg btn-primary btn-block', type='submit') #{botao}
									else
										button(class='btn btn-lg btn-primary btn-block', type='submit') #{botao}
									span.clearfix 
					-}
		
		
		
		
	
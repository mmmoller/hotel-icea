extends layout

block content
	div.container
		div.row
			center
				div.section-wall
					h1.section-title Criar novo usu√°rio
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				div.signup-wall
					form(class='form-signin', action='/home/gerente/signup', method='POST')
						input(type='text', name='username', class='form-control', placeholder='Usuario',required, autofocus)
						input(type='password', name='password', class='form-control nomargin', placeholder='Senha', required)
						input(type='email', name='email', class='form-control', placeholder='Email',required)
						input(type='text', name='firstName', class='form-control', placeholder='Nome',required)
						input(type='text', name='lastName', class='form-control', placeholder='Sobrenome',required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') Criar
						span.clearfix
				#message
					if message
						h1.text-center.error-message #{message}
extends layout2

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				div.account-wall
					h1.text-center.login-title Digite seu nome de usuário e senha
					img(class='profile-img', src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
					form(class='form-signin', action='/login', method='POST')
						input(type='text', name='username' class='form-control', placeholder='Usuário',required, autofocus)
						input(type='password', name='password' class='form-control', placeholder='Senha', required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') Login
						span.clearfix
					a(href='/signup', class='text-center new-account') Criar uma conta
				#message
				if message
					h1.text-center.error-message #{message}
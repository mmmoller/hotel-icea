extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				div.gerencia-wall
					h1.text-center.login-title Gerência de usuários
					br
					form(class='form-signup', action='/home/gerente/permissao', method='GET')
						button(class='btn btn-lg btn-primary btn-block', type='submit') Permissões de Usuários
						span.clearfix
					br
					form(class='form-signup', action='/home/gerente/signup', method='GET')
						button(class='btn btn-lg btn-primary btn-block', type='submit') Criar Usuários
						span.clearfix
					br
					form(class='form-signup', action='/home/gerente/registro', method='GET')
						button(class='btn btn-lg btn-primary btn-block', type='submit') Analisar Registros
						span.clearfix
				div.voltar-wall
					form(class='form-signup', action='/home', method='GET')
						button(class='btn btn-lg btn-primary btn-block', type='submit') Voltar
						span.clearfix